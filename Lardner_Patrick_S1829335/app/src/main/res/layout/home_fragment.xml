<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/salutation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/displayHeader"
            android:textSize="20sp" />

        <Button
            android:id="@+id/currentIncidentsButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/currentIncidentsButton" />

        <Button
            android:id="@+id/roadworksButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/roadworksButton" />

        <Button
            android:id="@+id/plannedRoadworksButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/plannedRoadworksButton" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>